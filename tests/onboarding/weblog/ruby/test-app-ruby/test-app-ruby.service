[Unit]
Description=Ruby Weblog App Service
After=syslog.target network.target

[Service]
SuccessExitStatus=143

User=datadog

Type=simple

Environment=DD_APM_INSTRUMENTATION_DEBUG=TRUE
WorkingDirectory=/home/datadog
ExecStart=/bin/bash -c 'rails server -b 0.0.0.0 -p 5985||source /etc/profile.d/rvm.sh && DD_INSTRUMENT_SERVICE_WITH_APM=false gem install bundler -v '~> 2.3.26' && DD_INSTRUMENT_SERVICE_WITH_APM=false bundle install && rails server -b 0.0.0.0 -p 5985'
ExecStop=/bin/kill -15 $MAINPID

[Install]
WantedBy=multi-user.target