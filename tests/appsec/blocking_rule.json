{
  "version": "2.1",
  "metadata": {
    "rules_version": "1.2.6"
  },
  "rules": [
    {
      "id": "arachni_rule",
      "name": "Arachni",
      "tags": {
        "type": "security_scanner",
        "category": "attack_attempt"
      },
      "conditions": [
        {
          "parameters": {
            "inputs": [
              {
                "address": "server.request.headers.no_cookies",
                "key_path": [
                  "user-agent"
                ]
              }
            ],
            "regex": "^Arachni\\/v"
          },
          "operator": "match_regex"
        }
      ],
      "on_match": ["block_request"]
    }
  ],
  "actions": [
    {
      "id": "block_request",
      "type": "block_request",
      "parameters": {
        "status_code": 403,
        "type": "auto"
      }
    }
  ]
}
