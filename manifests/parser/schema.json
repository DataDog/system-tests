{
  "type": "object",
  "properties": {
    "refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "manifest": {
      "type": "object",
      "patternProperties": {
        "^tests/.*": { "$ref": "#/$defs/test_declaration" }
      },
      "additionalProperties": false
    }
  },
  "required": ["manifest"],
  "additionalProperties": false,

  "$defs": {
    "test_declaration": {
      "anyOf": [
        { "$ref": "#/$defs/simple_declaration" },
        { "$ref": "#/$defs/complex_declaration" }
      ]
    },

    "simple_declaration": {
      "type": "string",
      "pattern": "^(missing_feature|irrelevant|bug|flaky|incomplete_test_app)( \\(.*\\))?$|^(v[0-9]|<|>|<=|>=|[0-9]).*"
    },

    "complex_declaration": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "excluded_variant": {
            "anyOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
          },
          "variant": {
            "anyOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
          },
          "library_version": {
            "type": "string",
            "pattern": "^(v[0-9]|<|>|<=|>=|[0-9]).*"
          },
          "declaration": {
            "type": "string",
            "pattern": "^(missing_feature|irrelevant|bug|flaky|incomplete_test_app)( \\(.*\\))?$"
          }
        },
        "additionalProperties": false,
        "minProperties": 1
      }
    }
  }
}
