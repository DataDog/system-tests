{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/miscs/telemetry/v2/events/message-batch.json",
  "description": "Instrumentation telemetry schema",
  "allOf": [
    {
      "properties": {
        "request_type": {
          "enum": [
            "app-started",
            "app-integrations-change",
            "app-dependencies-loaded",
            "app-client-configuration-change",
            "app-product-change",
            "generate-metrics",
            "app-heartbeat",
            "app-closing",
            "apm-onboarding-event"
          ]
        }
      }
    },
    {
      "if": {
        "properties": {
          "request_type": {
            "const": "app-started"
          }
        }
      },
      "then": {
        "payload": {
          "$ref": "/miscs/telemetry/v2/events/app-started.json"
        }
      }
    },
    {
      "if": {
        "properties": {
          "request_type": {
            "const": "app-integrations-change"
          }
        }
      },
      "then": {
        "payload": {
          "$ref": "/miscs/telemetry/v2/common/events/integrations-change.json"
        }
      }
    },
    {
      "if": {
        "properties": {
          "request_type": {
            "const": "app-dependencies-loaded"
          }
        }
      },
      "then": {
        "payload": {
          "$ref": "/miscs/telemetry/v2/common/events/dependencies-loaded.json"
        }
      }
    },
    {
      "if": {
        "properties": {
          "request_type": {
            "const": "app-client-configuration-change"
          }
        }
      },
      "then": {
        "payload": {
          "$ref": "/miscs/telemetry/v2/events/client-configuration-change.json"
        }
      }
    },
    {
      "if": {
        "properties": {
          "request_type": {
            "const": "app-product-change"
          }
        }
      },
      "then": {
        "payload": {
          "$ref": "/miscs/telemetry/v2/events/product-change.json"
        }
      }
    },
    {
      "if": {
        "properties": {
          "request_type": {
            "const": "generate-metrics"
          }
        }
      },
      "then": {
        "payload": {
          "$ref": "/miscs/telemetry/v2/common/events/generate-metrics.json"
        }
      }
    },
    {
      "if": {
        "properties": {
          "request_type": {
            "const": "apm-onboarding-event"
          }
        }
      },
      "then": {
        "payload": {
          "$ref": "/miscs/telemetry/v2/common/events/apm-onboarding.json"
        }
      }
    }
  ]
}
