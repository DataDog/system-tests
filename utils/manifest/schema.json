{
  "type": "object",
  "properties": {
    "refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "manifest": {
      "type": "object",
      "patternProperties": {
        "^tests/.*": { "$ref": "#/$defs/test_declaration" }
      },
      "additionalProperties": false
    }
  },
  "required": ["manifest"],
  "additionalProperties": false,

  "$defs": {
    "test_declaration": {
      "if": { "type": "string" },
      "then": { "$ref": "#/$defs/simple_declaration" },
      "else": { "$ref": "#/$defs/complex_declaration" }
    },

    "simple_declaration": {
      "type": "string",
      "pattern": "^(v[0-9]|<|>|<=|>=|[0-9]).*|^(missing_feature|irrelevant|bug|flaky|incomplete_test_app)( \\(.*\\))?$"
    },

    "complex_declaration": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "excluded_weblog": {
            "if": { "type": "string" },
            "then": { "type": "string" },
            "else": { "type": "array", "items": { "type": "string" } }
          },
          "weblog": {
            "if": { "type": "string" },
            "then": { "type": "string" },
            "else": { "type": "array", "items": { "type": "string" } }
          },
          "library_version": {
            "type": "string",
            "pattern": "^(v[0-9]|<|>|<=|>=|[0-9]).*"
          },
          "declaration": {
            "type": "string",
            "pattern": "^(missing_feature|irrelevant|bug|flaky|incomplete_test_app)( \\(.*\\))?$"
          },
          "weblog_declaration": {
            "type": "object",
            "patternProperties": {
              "^.*$": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "minProperties": 1
      }
    }
  }
}
